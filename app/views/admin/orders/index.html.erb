<div class="mt-4">
  <div class="container">
    <div class="row">
      <div class="col-md-10 offset-md-1 w-100 ">
        <span class="bg-light">注文履歴一覧</span>
        <table class="w-100">
          <tr class = "border-top bg-light">
            <td class=" pt-2 pb-2">購入日時</td>
            <td>購入者</td>
            <td>注文個数</td>
            <td>注文ステータス</td>
          </tr>
          <% sum = 0 %>
          <% @orders.each do |order| %>
            <tr class = "border-top border-bottom ">
              <td class=" pt-2 pb-2"><u><%=link_to "#{order.created_at.strftime("%Y/%m/%d/%H:%M:%S")}",admin_order_path(order),class:"text-dark " %></u></td>
              <td><%=order.customer.family_name %><%=order.customer.first_name %></td>
              <% order.order_products.each do |order_product| %>
                <% sum += order_product.quantity %>
              <% end %>
              <td><%= sum %></td>
              <td><%=order.status_i18n %></td>
            </tr>
          <% end %>
        </table>
        <%= paginate @orders %>
      </div>
    </div>
  </div>  
</div>