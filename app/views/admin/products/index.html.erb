<h2>商品一覧</h2>
<table class="table">
<tr>
<th>商品ID</th>
<th>商品名</th>
<th>税抜価格</th>
<th>ジャンル</th>
<th>ステータス</th>
</tr>

 <% @products.each do |product|%>
<tr>
  <th><%= product.id %></th>
  <th><%= product.name %></th>
  <th><%= product.price.to_s(:delimited) %></th>
  <th><%= product.genre.name %></th>
  <th><%= product.is_active %></th>
</tr>
  <% end %>
</table>




<h4>商品新規登録</h4>

<%= form_with model:@product,url: admin_products_path, method: :post, local:true do |f| %>

  <h4>商品画像</h4>
  <%= f.attachment_field :image %>
  
  <!--アタッチメントフィールドが適用されない-->

  <h4>商品名</h4>
  <%= f.text_field :name %>

  <h4>商品説明</h4>
  <%= f.text_area :description%>

  <h4>ジャンル</h4>
  <!--プルダウン式-->
  <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "選択して下さい" %>


  <h4>税抜価格</h4>
  <%= f.text_field :price %>円

  <h4>販売ステータス</h4>
  <label><%= f.radio_button :is_active, true, checked: "checked" %> 販売中 </label>
  <label><%= f.radio_button :is_active, false %> 販売停止中</label>

 <%#= f.radio_button :status, Product.is_actives.keys.map {|k| [I18n.t("enums.product.status.#{k}"), k]}, checked: "checked" %>
 <%#= f.radio_button :status, Product.is_actives.keys.map {|k| [I18n.t("enums.product.status.#{k}"), k]} %>
 
</br>
  <%= f.submit '新規登録', class:'btn btn-success' %>



<% end %>
