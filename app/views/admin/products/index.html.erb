<div class="row">
  <div class="col mt-3">

  <div class="col">
    <%= link_to new_admin_product_path do %>
    <i class="far fa-plus-square fa-pull-right fa-3x"></i>
    <% end %>
  </div>

  <span class="bg-light" style="font-size: 21px;">商品一覧</span>
  <table class="table">
  <tr>
  <thead class="thead-light">
  <th>商品ID</th>
  <th>商品名</th>
  <th>税抜価格</th>
  <th>ジャンル</th>
  <th>ステータス</th>
  </thead
  </tr>

   <% @products.each do |product|%>
  <tr>
    <th><%= product.id %></th>
    <th><%= link_to product.name , admin_product_path(product.id) , class:'btn btn-link' %></th>
    <th><%= product.price.to_s(:delimited) %></th>
    <th><%= product.genre.name %></th>
    <th>
      <% if (product.is_active == false ) %>
            販売停止中
      <% else %>
            販売中
      <% end %>
    </th>
  </tr>
    <% end %>
  </table>

   <%#= paginate @products %>
</div>