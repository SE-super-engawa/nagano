<h2><%= @customer.name %>さんの会員情報編集</h2>
<%= form_with model:@customer,local:true do |f| %>
  <div class="customer-info" >
    <table>
      <tr>
        <td>会員ID</td>
        <td><%= @customer.id %></td>
      </tr>
      <tr>
        <td>氏名</td>
        <td><%= f.text_field :family_name %>　<%= f.text_field :first_name %></td>
      </tr>
      <tr>
        <td>フリガナ</td>
        <td><%= f.text_field :family_name_kana %>　<%= f.text_field :first_name_kana %></td>
      </tr>
      <tr>
        <td>郵便番号</td>
        <td><%= f.number_field :postal_code %></td>
      </tr>
      <tr>
        <td>住所</td>
        <td><%= f.text_field :address %></td>
      </tr>
       <tr>
        <td>電話番号</td>
        <td><%= f.number_field :phone_number %></td>
      </tr>
       <tr>
        <td>メールアドレス</td>
        <td><%= f.email_field :email %></td>
      </tr>
       <tr>
        <td>会員ステータス</td>
        <td>
          <%= f.label :is_deleted_invalid,'有効',class:"text-success" %>
          <%= f.radio_button :is_deleted, :invalid %>
          <%= f.label :is_deleted_valid,'退会',class:"text-secondary" %>
          <%= f.radio_button :is_deleted, :valid %>
        </td>
      </tr>
    </table>
  </div>
  <%= f.submit '変更を保存',class:"btn btn-success text-white" %>
<% end %>