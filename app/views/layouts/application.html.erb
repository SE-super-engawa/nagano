<!DOCTYPE html>
<html>
  <head>
    <title>WorkGithub</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
    <div class="row">
    <% if customer_signed_in? %>
      <span>LOGO</span>
      <span>ようこそ、<%= current_customer.family_name %>さん！</span>
      <span><%= link_to "マイページ", customers_my_page_path, class: "btn btn-outline-secondary mr-2" %></span>
      <span><%= link_to "商品一覧", products_path, class: "btn btn-outline-secondary mr-2" %></span>
      <span><%= link_to "カート", cart_items_path, class: "btn btn-outline-secondary mr-2" %></span>
      <span><%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class: "btn btn-outline-secondary mr-2" %></span>
    <% else %>
      <li>
        <%= link_to "新規登録", new_customer_registration_path %>
      </li>
      <li>
        <%= link_to "ログイン", new_customer_session_path %>
      </li>
    <% end %>
    </div>
    </div>

    <%= yield %>
  </body>
</html>
