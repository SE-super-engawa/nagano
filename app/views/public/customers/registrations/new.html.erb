<div class="container">
<h2 class="row">新規会員登録</h2>

<%= form_with model: @customer, url: customer_registration_path, id: 'new_customer', class: 'new_customer', local: true do |f| %>
  <%= render "public/customers/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :"名前", class: "col-sm-2 control-label" %>
    <%= f.label :"(姓)", class: "col-sm-1 control-label" %>
    <%= f.text_field :family_name, autofocus: true, class: "col-sm-3 form-control-static name" %>
    <%= f.label :"(名)", class: "col-sm-1 control-label" %>
    <%= f.text_field :first_name, autofocus: true, class: "col-sm-3 form-control-static name" %>
  </div>

  <div class="field">
    <%= f.label :"フリガナ", class: "col-sm-2 control-label" %>
    <%= f.label :"(セイ)", class: "col-sm-1 control-label" %>
    <%= f.text_field :family_name_kana, autofocus: true, class: "col-sm-3 form-control-static name" %>
    <%= f.label :"(メイ)", class: "col-sm-1 control-label" %>
    <%= f.text_field :first_name_kana, autofocus: true, class: "col-sm-3 form-control-static name" %>
  </div>

  <div class="field">
    <%= f.label :"メールアドレス", class: "col-sm-3 control-label" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-sm-3 form-control-static name" %>
  </div>

  <div class="field">
    <%= f.label :"郵便番号（ハイフンなし）", class: "col-sm-3 control-label" %>
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", class: "col-sm-3 form-control-static name" %>
  </div>

  <div class="field">
    <%= f.label :"住所", class: "col-sm-3 control-label" %>
    <%= f.text_field :address, autofocus: true, autocomplete: "address", class: "col-sm-7 form-control-static name" %>
  </div>

  <div class="field">
    <%= f.label :"電話番号（ハイフンなし）", class: "col-sm-3 control-label" %>
    <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number", class: "col-sm-3 form-control-static name" %>
  </div>

  <div class="field">
    <%= f.label :"パスワード", class: "col-sm-3 control-label"%>
    <% if @minimum_password_length %>
    (<%= @minimum_password_length %> 文字以上)
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", class: "col-sm-3 form-control-static name" %>
  </div>

  <div class="field">
    <%= f.label :"パスワード（確認用）", class: "col-sm-3 control-label" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "col-sm-3 form-control-static name" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録", class: 'btn btn-success col-sm-2 offset-sm-3 mt-3' %>
  </div>
<% end %>

  <div class="actions">
    <h2 class="row">既に登録済みの方</h2>
      <p class="new-link"><%= link_to "こちら", new_customer_session_path, class: "btn-link" %>からログインしてください。</p>
    </div>

</div>

