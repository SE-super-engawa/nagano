<div class="container">
  <h2 class="row">ショッピングカート</h2>

    <div class="col-xs-11">
      <% if @cart_items.present? %>
        <div class="pull-right margin-bottom">
          <%= link_to "カートを空にする", customers_cart_items_path, method: :delete, data: {confirm: '本当にカートを空にしてよろしいですか？'}, class: "btn btn-danger" %>
        </div>

        <table class="table">
          <thead>
            <tr>
              <th>商品名</th>
              <th>単価（税込）</th>
              <th>数量</th>
              <th>小計</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @cart_items.each do |cart_item| %>
            <tr>
              <td>
                <%= attachment_image_tag cart_item.product, :image_id, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
                <%= cart_item.product.name %>
              </td>
              <td>
                <!--商品の価格-->
              </td>
              <td>
                <%= form_with model: cart_item, url: customers_cart_item_path(cart_item), method: patch do |f| %>
                  <%= f.number_field :quantity, size: 10, min: 1 %>
                  <%= f.submit "変更", class: "btn btn-success" %>
                <% end %>
              </td>
              <td>
                <!--小計-->
              </td>
              <td>
                <%= link_to "削除する", customers_cart_item_path(cart_item), method: :delete, data: {confirm: '本当にこちらの商品を削除してよろしいですか？'}, class: "btn btn-danger" %>
              </td>
            </tr>
          </tbody>
        </table>
        <table class="table">
          <thead>
            <tr>
              <th>合計金額</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>
                <!--合計金額わからなーい！！！-->
              </td>
            </tr>
          </tbody>
        </table>
        <% else %>
          <p>お客様のショッピングカートに商品はありません。</p>
          <p><%= link_to "商品一覧", products_path, class: "btn-link" %>から商品をお探し下さい。</p>
        <% end %>
    </div>
</div>