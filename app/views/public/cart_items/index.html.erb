<div class="container">
  <h2 class="row p-3">ショッピングカート</h2>

    <div class="col-xs-11">
      <% if @cart_items.present? %>
        <div class="pull-right margin-bottom">
          <%= link_to "カートを空にする", cart_items_path, method: :delete, data: {confirm: '本当にカートを空にしてよろしいですか？'}, class: "btn btn-danger" %>
        </div>

        <table class="table">
          <thead>
            <tr>
              <th>商品名</th>
              <th>単価（税込）</th>
              <th>数量</th>
              <th>小計</th>
              <th></th>
            </tr>
          </thead>
          <% @total_price = 0 %>
          <tbody>
            <% @cart_items.each do |cart_item| %>
            <tr>
              <td>
                <%= attachment_image_tag cart_item.product, :image, :fill, size: "60x50", format: 'jpeg', fallback: "no_image.jpg" %>
                <%= cart_item.product.name %>
              </td>
              <td>
                <% tax_price = cart_item.product.price*1.1 %>
                <p>¥ <%= tax_price.round.to_s(:delimited) %></p>
              </td>
              <td>
                <%= form_with model: cart_item, url: cart_item_path(cart_item), method: :patch do |f| %>
                  <%= f.number_field :quantity, size: 10, min: 1 %>
                  <%= f.submit "変更", class: "btn btn-success" %>
                <% end %>
              </td>
              <td>
                <!--小計-->
                <% sub_total_price = tax_price*cart_item.quantity %>
                <p>¥ <%= sub_total_price.round.to_s(:delimited) %></p>
                <% @total_price += sub_total_price %>
              </td>
              <td>
                <%= link_to "削除する", cart_item_path(cart_item), method: :delete, data: {confirm: '本当にこちらの商品を削除してよろしいですか？'}, class: "btn btn-danger" %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
        <table class="table">
          <thead>
            <tr>
              <th>合計金額</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>
                <p>¥ <%= @total_price.round.to_s(:delimited) %></p>
              </td>
            </tr>
          </tbody>
        </table>
    </div>
    <div class="col-md-4 col-md-offset-4 text-center">
      <%= link_to "買い物を続ける", products_path, class: "btn btn-primary" %>
    </div>
    <div class="col-md-4 col-md-offset-4 text-center">
      <%= link_to "情報入力に進む", new_order_path, class: "btn btn-success" %>
    </div>
    <% else %>
      <p>お客様のショッピングカートに商品はありません。</p>
      <p><%= link_to "商品一覧", products_path, class: "btn-link" %>から商品をお探し下さい。</p>
    <% end %>
</div>