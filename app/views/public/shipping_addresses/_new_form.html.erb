<div class="container">
<%= form_with model: shipping_address, local:true do |f| %>
  <div class="form-group row">
    <%= f.label :"郵便番号(ハイフンなし)", class: 'col-4' %>
    <%= f.text_field :postal_code, class: 'form_control col-8' %>
  </div>
  <div class="form-group row">
    <%= f.label :"住所", class: 'col-4' %>
    <%= f.text_field  :address, class: 'form_control col-8' %>
  </div>
  <div class="form-group row">
    <%= f.label :"宛名", class: 'col-4' %>
    <%= f.text_field  :name, class: 'form_control col-5' %>
    <%= f.submit '新規登録', class:'btn btn-sm btn-success ml-3' %></span>
  </div>
<% end %>
</div>