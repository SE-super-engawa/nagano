<div class="row">
<!--エラーメッセージ-->
<% if @shipping_address.errors.any? %>
  <div class="alert alert-danger">
    <div><strong><%= pluralize(@shipping_address.errors.count, "error") %> prohibited this book from being saved:</strong></div>
    <ul>
      <% @shipping_address.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
</div>
<!--end-->

<%= form_with model: shipping_address, local:true do |f| %>
  <div class="form-group row">
    <%= f.label :"郵便番号(ハイフンなし)", class: 'col-3' %>
    <%= f.text_field :postal_code, class: 'form_control col-8' %>
  </div>
  <div class="form-group row">
    <%= f.label :"住所", class: 'col-3' %>
    <%= f.text_field  :address, class: 'form_control col-8' %>
  </div>
  <div class="form-group row">
    <%= f.label :"宛名", class: 'col-3' %>
    <%= f.text_field  :name, class: 'form_control col-5' %>
    <%= f.submit '新規登録', class:'btn btn-sm btn-success ml-3' %>
  </div>
<% end %>