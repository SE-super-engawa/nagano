<div class="container">
  <div class="row">
    <div class="col-xs-4 col-xs-offset-2 product-show">
      <%= attachment_image_tag @product, :image_id, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
    </div>

    <div class="col-xs-6 product-show">
      <h3><%= @product.name %></h3>
      <%= @product.description %>

      <div class="product-price">
        <!--価格謎。price=税抜のカラムだから、tax_priceカラムも作成？？-->
        <h4>¥ <%= tax_price(@product.price).to_s(:delimited) %>
        <span>(税込)</span>
        </h4>
      </div>

      <div class="field">
        <% if @product.is_active == true %>
          <% if @product.genre.is_active == true %>
            <%= form_with model: @cart_item, url: customers_cart_items_path, method: post do |f| %>
              <%= f.select :quantity, options_for_select((1..10).to_a), include_blank: "個数選択" %>
              <%= f.submit "カートに入れる", class: 'btn btn-success' %>
            <% end %>
          <% else %>
            <h4>販売停止中</h4>
          <% end %>
        <% elsif @product.is_active == false %>
          <h4>販売停止中</h4>
        <% end %>
      </div>

    </div>
  </div>
</div>