<div class="container index-container">

<h3 class="order-title">注文履歴一覧</h3>

<table class="table table-sm -bordered">
  <tr class="tablehead">
    <td>注文日</td>
    <td>配送先</td>
    <td>注文商品</td>
    <td>支払金額</td>
    <td>ステータス</td>
    <td>注文詳細</td>
  </tr>

  <% @order.each do |order| %>
    <tr>
        <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
        <td>
            <%= order.postal_code %><br>
            <%= order.address %><br>
            <%= order.name %>
        </td>
        <td>
          <% order.order_products.each do |ord| %>
            <%= ord.product.name %><br>
          <% end %>
        </td>
        <td><%= order.total_price + 800 %></td>
        <td><%= order.status_i18n %></td>
        <td><%= link_to '表示する', order_path(order.id) ,class: "btn btn-primary"%></td>
      </tr>
  <% end %>
  </table>
</div>
