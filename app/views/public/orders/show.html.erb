<div class="container show-container">
  <div class="order-title">
    <h3 class="row ml-5 d-inline">注文履歴詳細</h3>
  </div>

  <div class="row mt-4">
   <div class="col-7">
    <table class="table table-sm table-bordered">
     <h5>注文情報</h5>
      <tr>
        <th class="tablehead">注文日</th>
        <td><%= @order.created_at.strftime('%Y/%m/%d')  %></td>
      </tr>

      <tr>
        <th class="tablehead">配送先</th>
        <td><%= "〒" + @order.postal_code %><br>
		        <%= @order.address %><br>
		        <%= @order.name %></td>
      </tr>

      <tr>
        <th class="tablehead">支払方法</th>
        <td><%= @order.payment %></td>
      </tr>

      <tr>
        <th class="tablehead">ステータス</th>
        <td><%= @order.status %></td>
      </tr>
    </table>
   </div>

   <div class="col-5">
    <table class="table table-sm table-bordered">
      <h5>請求情報</h5>
      <tr>
        <th class="tablehead">商品合計</th>
        <td><%= @total_price %></td>
      </tr>


      <tr>
        <th class="tablehead">配送料</th>
	      <td><%= @order.shipping_fee %></td>
      </tr>

      <tr>
        <th class="tablehead">ご請求額</th>
        <td><%= @order_total_price %></td>
      </tr>
    </table>
   </div>
  </div>

  <div class="row">
   <div class="col-8">
    <table class="table table-sm table-bordered">
      <h5>注文内容</h5>
          <tr class="tablehead">
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>個数</th>
            <th>小計</th>
          </tr>
      <% @cart_items.each do |cart| %>
      <tr>
        <td><%= cart.product.name %></td>
        <td><%= cart.products.price.to_s(:delimited) %>円</td>
        <td><%= cart.quantity %></td>
        <td><%= cart.subtotal.to_s(:delimited) %>円</td>
      </tr>
      <% end %>
    </table>
   </div>
  </div>
</div>